{
	"name": "wapi",
	"version": "1.0.0",
	"description": "WhatsApp OTP API using Baileys and ElysiaJS with Bun",
	"author": "iaMJ",
	"license": "MIT",
	"main": "src/index.ts",
	"scripts": {
		"build": "bun build.ts",
		"start": "bun run src/index.ts",
		"dev": "bun --watch run src/index.ts",
		"format": "biome format --write ./src",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"type-check": "tsc --noEmit"
	},
	"lint-staged": {
		"*.ts": ["bun format"]
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.3",
		"@types/bun": "^1.2.19",
		"@types/node": "^24.1.0",
		"better-sqlite3": "^12.2.0",
		"drizzle-kit": "^0.31.4",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"typescript": "^5.8.3"
	},
	"engines": {
		"bun": ">=1.2.0"
	},
	"private": true,
	"type": "module",
	"dependencies": {
		"@elysiajs/cors": "^1.3.3",
		"@hapi/boom": "^10.0.1",
		"@whiskeysockets/baileys": "^6.7.18",
		"dotenv": "^17.2.1",
		"drizzle-orm": "^0.44.4",
		"elysia": "^1.3.6",
		"pino": "^9.7.0",
		"sharp": "^0.34.3",
		"zod": "^4.0.14"
	},
	"keywords": [
		"whatsapp",
		"otp",
		"api",
		"baileys",
		"elysia",
		"bun"
	],
	"trustedDependencies": [
		"@whiskeysockets/baileys",
		"esbuild",
		"protobufjs"
	]
}
